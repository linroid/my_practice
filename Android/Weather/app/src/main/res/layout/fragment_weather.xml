<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:textColor="#ffffff"
        tools:text="湘潭" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBottom="@id/city_name"
        tools:text="2015.1.26"
        android:layout_toRightOf="@id/city_name"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:textColor="#ffffff"/>
    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_delete"
        style="?android:attr/borderlessButtonStyle"
        android:layout_toRightOf="@id/date"
        android:layout_alignBottom="@id/date"/>
    <ImageView
        android:id="@+id/weather_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/city_name"
        android:layout_marginTop="16dp"
        android:src="@drawable/day06_l"
        android:layout_marginLeft="32dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/weather_logo"
        android:layout_below="@id/city_name"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:dividerPadding="34dp"
        android:showDividers="middle"
        android:divider="@android:color/transparent">
        <TextView
            android:id="@+id/weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            tools:text="16*"
            android:textSize="50sp"/>
        <!--<TextView-->
            <!--android:id="@+id/weather_max_min_temperature"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:text="12/9*"-->
            <!--android:textSize="20sp"-->
            <!--android:textColor="#fff"/>-->
        <TextView
            android:id="@+id/weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            tools:text="小雨"/>
        <TextView
            android:id="@+id/pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#b1bcca"
            tools:text="PM2.5: 111"/>
        <TextView
            android:id="@+id/weather_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#b1bcca"
            tools:text="北风:2级"/>
    </LinearLayout>
    <!--<HorizontalScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="128dp"-->
        <!--android:layout_alignParentBottom="true">-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="预报"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/future_container"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9b000000"
        android:layout_above="@+id/future_container"
        android:layout_marginBottom="4dp"/>
        <LinearLayout
            android:id="@+id/future_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
        </LinearLayout>
    <!--</HorizontalScrollView>-->
</RelativeLayout>